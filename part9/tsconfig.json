{
    "compilerOptions": {
        "target": "esnext",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "declaration": true
    },
    "include": ["*", ".eslintrc.js"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
